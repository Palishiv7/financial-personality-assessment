{
  "version": 2,
  "builds": [
    { "src": "*.html", "use": "@vercel/static" },
    { "src": "src/css/**/*", "use": "@vercel/static" },
    { "src": "src/js/*.js", "use": "@vercel/static" },
    { "src": "src/index.html", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/src/(.*)", "dest": "/src/$1" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/$1" }
  ]
} 